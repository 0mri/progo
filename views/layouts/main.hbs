<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!--STYLES-->
  <link rel="stylesheet" href="/styles/bootstrap.min.css" />
  <link rel="stylesheet" href="/styles/mdb.min.css" />
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <link rel="stylesheet" href="/styles/style.css">
  <!--STYLES END-->
  <title>
    PROGO
  </title>
  <script type="text/javascript" src="/js/dependencies/jquery-3.2.1.min.js"></script>
</head>

<body>
  {{> loader }}
  {{#if user}}
    <!--NAV ------------------------------------------------------------------------------------------------------------>

    <nav class="navbar navbar-expand-md sticky-top navbar-light grey lighten-5 mb-4 z-depth-0">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="container">

        <div class="collapse navbar-collapse akannnn" id="navbarCollapse">
          <div class="navbar-translate">
            <a class="navbar-brand d-block" href="/">PROGO</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
              <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
                <li class="nav-item"><a class="nav-link no-barba" href="/logout">Logout</a></li>
              </ul>
          </button>

          </div>

        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ml-2 mr-auto d-md-none d-lg-block">
            <li class="nav-item">
              <form class="searchbox" action="/" method="GET">
                <input class="border" name="search" type="search" placeholder="Search..." id="search" autocomplete="off">
                <button class="search-button" type="submit"><i class="ion-ios-search-strong"></i></button>
                <div id="search-autocomplete" class="search-autocomplete ml-2">
                  <ul id="alan">

                    <li class="no-results">No results.</li>
                    <li class="error">%err%</li>
                  </ul>
                  <div class="search-load">
                    <div class="spinner">
                      <div class="bounce1"></div>
                      <div class="bounce2"></div>
                      <div class="bounce3"></div>
                    </div>
                  </div>
                </div>
              </form>
            </li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item waves-light">
              <a href="/" class="nav-link">Home</a>
            </li>
            <li class="dropdown nav-item">
              <a href="#" class="dropdown-toggle nav-link waves-light msg" data-toggle="dropdown">Messages <span class="btn__badge hide"></span></a>
              <div class="dropdown-menu dropdown-menu-right message-center">
                <a href="/profile" class="dropdown-item">
                  <div class="row">
                    <div class="col-2 my-auto">
                      <img class="rounded-circle" src="/images/profile/default4.png">
                      </div>
                      <div class="col-10 my-auto">
                      <strong>levmusic</strong>
                      <div>{{{trimString 'Lorem ipsum dolor sit amet sad asd asd asd as.' 5}}}</div>
                    </div>
                  </div>
                  </a>
                  <div class="dropdown-divider"></div>
              </div>
            </li>
            <li class="dropdown nav-item">
              <a class="dropdown-toggle nav-link waves-light" data-toggle="dropdown">
                      &nbsp; <img src="/{{user.profileImage}}" class="rounded-circle special-img">
                  </a>
              <div class="dropdown-menu dropdown-menu-right">
                <a href="/profile" class="dropdown-item"><i class="ion-ios-person-outline"></i>&nbsp; Profile</a>
                <a class="dropdown-item"><i class="ion-ios-cog-outline"></i>&nbsp; Settings</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item"><i class="ion-ios-information-outline"></i>&nbsp; Help</a>
                <div class="dropdown-divider"></div>
                <a href="/logout" class="dropdown-item no-barba"><i class="ion-social-nodejs"></i>&nbsp; Logout</a>
              </div>
            </li>
          </ul>
        </div>
      </div>
      </div>
    </nav>

    <!--NAV ------------------------------------------------------------------------------------------------------------>
  {{/if}}
  <div id="barba-wrapper">
    <div class="barba-container">
      <div data-transition="fadeIn">
        {{{ body }}}
        {{#if user}}
          {{> footer }}
        {{/if}}
      </div>
    </div>
  </div>

  <!--SCRIPTS-->
  <script src="/js/dependencies/bootstrap.min.js"></script>
  <script src="/js/dependencies/mdb.min.js"></script>
  <script src="/js/dependencies/barba.min.js" type="text/javascript"></script>
  <script src="/js/dependencies/barba.transitions.min.js" type="text/javascript"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" type="text/javascript"></script>
  <script src="/js/barbainit.js" type="text/javascript"></script>
  <script src="/js/navbar.js" type="text/javascript"></script>
  <script src="/js/searchbox.js" type="text/javascript"></script>
  <script type="text/javascript">
    $(function(){

    });
  </script>
  <!--SCRIPTS END-->
</body>

</html>
